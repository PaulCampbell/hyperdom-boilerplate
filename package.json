{
  "name": "hyperdom_boilerplate",
  "version": "1.0.0",
  "description": "boilerplate single page hyperdom app",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "hyperdom": "^0.2.0"
  },
  "devDependencies": {
    "babel-plugin-transform-do-expressions": "^6.8.0",
    "babel-plugin-transform-react-jsx-source": "^6.9.0",
    "babel-preset-es2015-ie": "^6.6.2",
    "babel-preset-react": "^6.11.1",
    "babelify": "^7.3.0",
    "brfs": "^1.4.3",
    "browser-monkey": "^1.29.2",
    "exorcist": "^0.4.0",
    "gh-pages": "^0.11.0",
    "karma": "^1.3.0",
    "karma-browserify": "^5.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-mocha": "^1.2.0",
    "karma-mocha-reporter": "^2.2.0",
    "live-server": "^1.1.0",
    "mocha": "^3.1.0",
    "uglifyjs": "^2.4.10",
    "watchify": "^3.7.0"
  },
  "scripts": {
    "test": "karma start",
    "watch": "mkdir -p dist && cp src/index.html dist/index.html && watchify src/index.js -v --debug --extension .jsx -t babelify -o 'exorcist dist/index.max.js.map > dist/index.js'",
    "start": "npm run watch | live-server ./dist",
    "deploy": "gh-pages -d dist"
  },
  "babel": {
    "env": {
      "development": {
        "presets": [
          "es2015-ie",
          "react"
        ],
        "plugins": [
          "transform-do-expressions",
          "transform-react-jsx-source"
        ]
      },
      "production": {
        "presets": [
          "es2015-ie",
          "react"
        ],
        "plugins": [
          "transform-do-expressions"
        ]
      }
    }
  },
  "author": "paulcampbell",
  "license": "ISC"
}
